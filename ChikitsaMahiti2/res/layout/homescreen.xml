<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="@color/background">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chimah_logo" android:id="@+id/imageView1" android:layout_gravity="center"></ImageView>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/around_you_button" android:text="@string/around_you" android:layout_marginTop="150dip"></Button>
    <Button android:id="@+id/about_button" android:layout_height="wrap_content" android:text="@string/about" android:layout_width="match_parent"></Button>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/exit_button" android:text="@string/exit"></Button>
    
</LinearLayout>
